<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="DeviceManageMap"   xmlns="http://ibatis.apache.org/mapping"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="SqlMap.xsd">
  <alias>
    <typeAlias alias="DeviceManage" assembly="DataAccess.dll" type="DataAccess.Domain.DeviceManage" />
  </alias>
  <resultMaps>
    <resultMap id="DeviceManageResult" class="DeviceManage">
      <result property="Id" column="ID" type="long" dbType="long"/>
      <result property="MerchantNo" column="MerchantNo" type="string" dbType="varchar"/>
      <result property="TerminalNo" column="TerminalNo" type="string" dbType="varchar"/>
      <result property="PsamNo" column="PSAMNo" type="string" dbType="varchar"/>
      <result property="DeviceNo" column="DeviceNo" type="string" dbType="varchar"/>
      <result property="CreateUser" column="CreateUser" type="string" dbType="varchar"/>
      <result property="CreateTime" column="CreateTime" type="DateTime" dbType="DateTime"/>
      <result property="UpdUser" column="UpdUser" type="string" dbType="varchar"/>
      <result property="UpdTime" column="UpdTime" type="DateTime" dbType="DateTime"/>
    </resultMap>
  </resultMaps>
  <statements>

    <select id="SelectDeviceManage" parameterClass="string" resultClass="DeviceManage">
      SELECT ID AS Id,MerchantNo AS MerchantNo,TerminalNo AS TerminalNo,PSAMNo AS PsamNo,DeviceNo AS DeviceNo,CreateUser AS CreateUser,CreateTime AS CreateTime,UpdUser AS UpdUser,UpdTime AS UpdTime
      FROM DeviceManage
      <dynamic prepend="WHERE">
        <isParameterPresent>
          ID = #value#
        </isParameterPresent>
      </dynamic>
    </select>
    <insert id="InsertDeviceManage" parameterClass="DeviceManage">
      INSERT INTO DeviceManage
      (MerchantNo,TerminalNo,PSAMNo,DeviceNo,CreateUser,CreateTime,UpdUser,UpdTime)
      VALUES(#MerchantNo#,#TerminalNo#,#PsamNo#,#DeviceNo#,#CreateUser#,#CreateTime#,#UpdUser#,#UpdTime#)
      <selectKey resultClass="long" type="post" property="Id">
        SELECT LAST_INSERT_ROWID() as value
      </selectKey>
    </insert>
    <update id="UpdateDeviceManage" parameterClass="DeviceManage">
      UPDATE DeviceManage
      SET MerchantNo=#MerchantNo#,TerminalNo=#TerminalNo#,PSAMNo=#PsamNo#,DeviceNo=#DeviceNo#,CreateUser=#CreateUser#,CreateTime=#CreateTime#,UpdUser=#UpdUser#,UpdTime=#UpdTime#
      WHERE ID = #Id#
    </update>
    <delete id="DeleteDeviceManage" parameterClass="string">
      DELETE FROM DeviceManage
      WHERE ID = #value#
    </delete>
  </statements>
</sqlMap>
